{
  "manifest_version": 3,
  "name": "영단어 즉석 번역(instant translation - 네이버 사전)",
  "version": "1.0",
  "description": "영어 단어의 뜻을 한번에 번역합니다.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png"
  },
  "action": {
    "default_title": "instant translation",
    "default_popup": "popup.html"
  },
  "default_locale": "en",
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "permissions": ["tabs"],
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["js/content.js"]
    }
  ]
}
