{
  "pasteImage.defaultName": "${currentFileNameWithoutExt}hms",
  "pasteImage.basePath": "${projectRoot}",
  "pasteImage.path": "${currentFileDir}/img",
  "pasteImage.namePrefix": "",
  "pasteImage.forceUnixStyleSeparator": true,
  "pasteImage.insertPattern": "![${imageFileNameWithoutExt}](./img/${imageFileName})",
  "pasteImage.prefix": "/",
  "pasteImage.filePathConfirmInputBoxMode": "onlyName",
  "pasteImage.showFilePathConfirmInputBox": true,
  "markdownlint.config": {
    "MD033": {
      "allowed_elements": ["details", "summary", "div", "mark", "del"]
    },
    "editor.quickSuggestions": true
  },
  "liveServer.settings.port": 5501
}
